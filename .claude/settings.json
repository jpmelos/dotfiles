{
    "apiKeyHelper": "~/.claude/api-key-helper.sh",
    "permissions": {
        "allow": [
            "Bash(true)",
            "Bash(ls:*)",
            "Bash(find:*)",
            "Bash(grep:*)",
            "Bash(cat:*)",
            "Bash(head:*)",
            "Bash(tail:*)",
            "Bash(cut:*)",
            "Bash(rg:*)",
            "Bash(git log:*)",
            "Bash(git rev-list:*)",
            "Bash(git status:*)",
            "Bash(git diff:*)",
            "Bash(gh issue list:*)",
            "Bash(gh issue view:*)",
            "Bash(gh pr list:*)",
            "Bash(gh pr view:*)",
            "Bash(gh pr diff:*)",
            "Bash(gh release list:*)",
            "Bash(gh release view:*)",
            "Bash(whois:*)",
            "Bash(python -m py_compile:*)",
            "Bash(python3 -m py_compile:*)",
            "Bash(cargo check:*)",
            "Bash(cargo clippy:*)",
            "WebFetch(domain:docs.rs)",
            "Bash(bash ~/.claude/commands/review-prompt.sh:*)",
            "Bash(bash jpenv-bin/lint.bash:*)",
            "Bash(bash jpenv-bin/tests.bash:*)"
        ],
        "defaultMode": "acceptEdits"
    },
    "model": "sonnet",
    "autoUpdates": false,
    "enabledPlugins": {
        "rust-analyzer-lsp@claude-plugins-official": true
    }
}
