{
    "apiKeyHelper": "~/.claude/api-key-helper.sh",
    "permissions": {
        "deny": [
            "Edit(jpenv-bin/**)"
        ],
        "allow": [
            "Read",
            "Write",
            "Edit",
            "Bash(true)",
            "Bash(false)",
            "Bash(date)",
            "Bash(echo:*)",
            "Bash(ls:*)",
            "Bash(grep:*)",
            "Bash(rg:*)",
            "Bash(cat:*)",
            "Bash(wc:*)",
            "Bash(head:*)",
            "Bash(tail:*)",
            "Bash(cut:*)",
            "Bash(mkdir:*)",
            "Bash(safe_rm:*)",
            "Bash(git remote --verbose)",
            "Bash(git branch --show-current)",
            "Bash(git log:*)",
            "Bash(git show:*)",
            "Bash(git rev-list:*)",
            "Bash(git status:*)",
            "Bash(git diff:*)",
            "Bash(gh --help)",
            "Bash(gh issue list:*)",
            "Bash(gh issue view:*)",
            "Bash(gh pr list:*)",
            "Bash(gh pr view:*)",
            "Bash(gh pr diff:*)",
            "Bash(gh release list:*)",
            "Bash(gh release view:*)",
            "Bash(whois:*)",
            "Bash(python -m py_compile:*)",
            "Bash(python3 -m py_compile:*)",
            "Bash(cargo check:*)",
            "Bash(cargo clippy:*)",
            "WebFetch(domain:docs.rs)",
            "Bash(bash ~/.claude/commands/review-prompt.sh)",
            "Bash(ralph --validate:*)",
            "Bash(ai_commit:*)",
            "Bash(bash jpenv-bin/lint.bash:*)",
            "Bash(bash jpenv-bin/tests.bash:*)"
        ],
        "defaultMode": "dontAsk"
    },
    "model": "sonnet",
    "enabledPlugins": {
        "rust-analyzer-lsp@claude-plugins-official": true
    },
    "autoUpdates": false,
    "statusLine": {
        "type": "command",
        "command": "bash ~/.claude/statusline.sh",
        "padding": 0
    }
}
