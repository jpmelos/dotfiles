# Turn off startup message
startup_message off

# Turns off visual bell
vbell off

# Default scroll back
defscrollback 5000

# Set UTF-8 default
setenv LC_CTYPE en_US.UTF-8
defutf8 on

# Bind keys to change terminal
bind ',' prev
bind '.' next

# Change the status line to give an window list at the bottom of the screen,
# with the time and date and current window highlighted
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d-%m-%y %{W}%c %{g}]'

# Terminal setup
screen -t irssi 0 irssi
