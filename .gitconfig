[core]
    editor = vim

[color]
    ui = always
    interactive = false

[color "diff"]
    meta = white bold
    frag = white
    new = cyan bold
    old = red bold

[color "status"]
    added = green
    changed = cyan
    untracked = red bold

[alias]
    bl = blame --show-stats
    br = branch
    ci = commit -v
    cle = clean -dfx
    co = checkout
    dcst = diff --cached --stat
    del = branch -D
    di = diff
    dic = diff --cached
    dst = diff --stat
    ls = ls-files
    mg = merge --no-ff
    pa = add --patch
    pu = pull --rebase
    rb = rebase
    sh = show
    shf = diff-tree --no-commit-id --name-only -r HEAD
    st = status -u

[push]
    default = simple
