{
    "$schema": "https://opencode.ai/config.json",
    "enabled_providers": [
        "opencode",
        "anthropic"
    ],
    "model": "opencode/claude-sonnet-4-5",
    "provider": {
        "opencode": {
            "options": {
                "apiKey": "{env:OPENCODE_API_KEY}"
            },
            "models": {
                "claude-sonnet-4-5": {
                    "limit": {
                        "context": 150000,
                        "output": 64000
                    }
                },
                "claude-opus-4-6": {
                    "limit": {
                        "context": 150000,
                        "output": 128000
                    }
                }
            }
        },
        "anthropic": {
            "options": {
                "apiKey": "{env:CLAUDE_CODE_API_KEY}"
            },
            "models": {
                "claude-sonnet-4-5": {
                    "limit": {
                        "context": 150000,
                        "output": 64000
                    }
                },
                "claude-opus-4-6": {
                    "limit": {
                        "context": 150000,
                        "output": 128000
                    }
                }
            }
        }
    },
    "default_agent": "build",
    "permission": {
        "*": "deny",
        "read": "allow",
        "edit": {
            "*": "allow",
            "jpenv-bin/*": "deny"
        },
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "bash": {
            "true": "allow",
            "false": "allow",
            "date": "allow",
            "date *": "allow",
            "echo": "allow",
            "echo *": "allow",
            "ls": "allow",
            "ls *": "allow",
            "grep *": "allow",
            "rg *": "allow",
            "cat *": "allow",
            "wc *": "allow",
            "head *": "allow",
            "tail *": "allow",
            "cut *": "allow",
            "mkdir *": "allow",
            "safe_rm *": "allow",
            "git remote --verbose": "allow",
            "git branch --show-current": "allow",
            "git log": "allow",
            "git log *": "allow",
            "git show": "allow",
            "git show *": "allow",
            "git rev-list": "allow",
            "git rev-list *": "allow",
            "git status": "allow",
            "git status *": "allow",
            "git diff": "allow",
            "git diff *": "allow",
            "git reset": "allow",
            "git reset *": "allow",
            "gh search *": "allow",
            "gh issue list": "allow",
            "gh issue list *": "allow",
            "gh issue status": "allow",
            "gh issue status *": "allow",
            "gh issue view": "allow",
            "gh issue view *": "allow",
            "gh pr list": "allow",
            "gh pr list *": "allow",
            "gh pr status": "allow",
            "gh pr status *": "allow",
            "gh pr view": "allow",
            "gh pr view *": "allow",
            "gh pr diff": "allow",
            "gh pr diff *": "allow",
            "gh release list": "allow",
            "gh release list *": "allow",
            "gh release view": "allow",
            "gh release view *": "allow",
            "whois *": "allow",
            "which *": "allow",
            "python -m py_compile *": "allow",
            "python3 -m py_compile *": "allow",
            "cargo check": "allow",
            "cargo check *": "allow",
            "cargo clippy": "allow",
            "cargo clippy *": "allow",
            "review_diff": "allow",
            "ralph --validate *": "allow",
            "ai_commit": "allow",
            "ai_commit *": "allow",
            "bash jpenv-bin/lint.bash": "allow",
            "bash jpenv-bin/lint.bash *": "allow",
            "bash jpenv-bin/tests.bash": "allow",
            "bash jpenv-bin/tests.bash *": "allow"
        },
        "task": "allow",
        "skill": "allow",
        "lsp": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "codesearch": "allow",
        "external_directory": "allow",
        "doom_loop": "ask"
    },
    "keybinds": {
        "input_newline": "return",
        "input_submit": "shift+return",
        "model_cycle_favorite": "shift+tab"
    },
    "lsp": false,
    "formatter": false,
    "autoupdate": false
}
