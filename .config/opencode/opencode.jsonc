{
    "$schema": "https://opencode.ai/config.json",
    "enabled_providers": [
        "opencode",
        "anthropic"
    ],
    // "model": "opencode/gemini-3-pro",
    "model": "anthropic/claude-sonnet-4-5",
    "provider": {
        "opencode": {
            "options": {
                "apiKey": "{env:OPENCODE_API_KEY}"
            },
            "models": {
                "gemini-3-pro": {
                    "limit": {
                        "context": 150000,
                        "output": 64000
                    }
                }
            }
        },
        "anthropic": {
            "options": {
                "apiKey": "{env:CLAUDE_CODE_API_KEY}"
            },
            "models": {
                "claude-sonnet-4-5": {
                    "limit": {
                        "context": 150000,
                        "output": 64000
                    }
                },
                "claude-opus-4-5": {
                    "limit": {
                        "context": 150000,
                        "output": 64000
                    }
                }
            }
        }
    },
    "default_agent": "build",
    "tui": {
        "diff_style": "stacked"
    },
    "permission": {
        "*": "deny",
        "read": "allow",
        "edit": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "bash": {
            "true": "allow",
            "false": "allow",
            "echo*": "allow",
            "ls*": "allow",
            "grep*": "allow",
            "rg*": "allow",
            "cat*": "allow",
            "wc*": "allow",
            "head*": "allow",
            "tail*": "allow",
            "cut*": "allow",
            "mkdir*": "allow",
            "git branch --show-current": "allow",
            "git log*": "allow",
            "git show*": "allow",
            "git rev-list*": "allow",
            "git status*": "allow",
            "git diff*": "allow",
            "gh issue list*": "allow",
            "gh issue view*": "allow",
            "gh pr list*": "allow",
            "gh pr view*": "allow",
            "gh pr diff*": "allow",
            "gh release list*": "allow",
            "gh release view*": "allow",
            "whois*": "allow",
            "python -m py_compile*": "allow",
            "python3 -m py_compile*": "allow",
            "cargo check*": "allow",
            "cargo clippy*": "allow",
            "bash ~/.config/opencode/command/review-prompt.sh": "allow",
            "bash ~/bin/ralph --validate*": "allow",
            "bash jpenv-bin/lint.bash*": "allow",
            "bash jpenv-bin/tests.bash*": "allow",
            "bash jpenv-bin/commit.bash*": "allow"
        },
        "task": "allow",
        "skill": "allow",
        "lsp": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "codesearch": "allow",
        "external_directory": "ask",
        "doom_loop": "ask"
    },
    "keybinds": {
        "input_newline": "return",
        "input_submit": "shift+return",
        "model_cycle_favorite": "shift+tab"
    },
    "autoupdate": false
}
