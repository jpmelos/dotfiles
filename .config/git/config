[user]
    name = Jo√£o Sampaio
    email = jpmelos@gmail.com

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[init]
    defaultBranch = main
	templateDir = /Users/jpmelos/devel/git-template

[branch]
    sort = -committerdate

[fetch]
    prune = true

[log]
    date = local

[status]
    showUntrackedFiles = all

[diff]
    colorMoved = no

[merge]
    conflictStyle = diff3

[rebase]
    updateRefs = true

[rerere]
	enabled = true

[commit]
    verbose = true
    gpgSign = true

[tag]
    gpgSign = true

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = true

[color "branch"]
    current = green dim bold
    remote = red dim

[color "status"]
    added = green dim
    changed = blue dim
    untracked = red dim

[color "diff"]
    meta = black bold
    frag = black
    new = green dim bold
    old = red dim bold
    whitespace = black red dim bold

[alias]
    main-branch = ! ~/.check-for-git-remote-head.sh && git symbolic-ref refs/remotes/origin/HEAD | cut -d'/' -f4
    root = rev-parse --show-toplevel
    nuke = "! f() { source "$HOME/.gitfunctions"; __git_nuke; }; f"
    big-revert = "! f() { source "$HOME/.gitfunctions"; __git_big_revert; }; f"

    # List of shorthands:
    # a = add
    # b = branch
    # c = commit
    # d = diff
    # e =
    # f =
    # g =
    # h = reserved for `gh` (GitHub's CLI tool)
    # i =
    # j =
    # k =
    # l = log
    # m = merge
    # n =
    # o = checkout
    # p = pl=pull ps=push
    # q =
    # r = rb=rebase rs=reset
    # s = sh=show st=status
    # t = ls-tree
    # u =
    # v =
    # w =
    # x =
    # y = cherry-pick
    # z =

    # a = add
    a = add
    aa = add -A :/
    apa = add --patch

    # b = branch
    b = branch
    br = "! f() { git branch -vv --color=always | head -n 20; }; f"
    bn = checkout -b  # n = new
    bd = branch -D  # d = delete

    # c = commit
    c = commit
    ca = commit -a
    cm = commit --amend
    cn = commit -n
    cam = commit -a --amend
    can = commit -a -n
    cmn = commit --amend -n
    camn = commit -a --amend -n
    cw = commit -a -n -m "WIP"

    # d = diff
    d = diff
    dst = diff --name-status
    dca = diff --cached
    dm = ! git diff $(git main-branch)...HEAD
    dom = ! git diff origin/$(git main-branch)...HEAD

    # l = log
    l = "! f() { git log --color=always --oneline --graph --decorate $@ | awk -f ~/.git-log-prepend-number-awk | less -R; }; f"
    lf = log -p --follow --stat --
    lp = log -p --pretty=fuller --stat

    # m = merge
    m = merge
    mm = ! git merge $(git main-branch)
    mc = merge --continue
    ma = merge --abort

    # o = checkout
    o = checkout
    om = ! git checkout $(git main-branch)
    of = checkout -f

    # pl = pull
    pl = pull

    # ps = push
    ps = push
    psf = push --force-with-lease

    # rb = rebase
    rb = rebase
    rbm = ! git rebase origin/$(git main-branch)
    rbi = rebase -i
    rbim = ! git rebase -i origin/$(git main-branch)
    rbc = rebase --continue
    rba = rebase --abort

    # rs = reset
    rsu = reset HEAD~1
    rso = reset --hard @{upstream}
    rsm = ! git reset --hard origin/$(git main-branch)

    # sh = show
    sh = "! f() { if [[ \"$1\" =~ ^- ]]; then HEADN=\"${1#-}\"; shift; git show \"HEAD~$HEADN\" $@; else git show \"$@\"; fi; }; f"
    shf = "! f() { if [[ \"$1\" =~ ^- ]]; then HEADN=\"${1#-}\"; shift; git show --name-status $@ \"HEAD~$HEADN\"; else git show --name-status \"$@\"; fi; }; f"

    # st = status
    st = status

    # t = ls-tree
    t = ls-tree HEAD --

    # y = cherry-pick
    y = cherry-pick

[include]
    path = ~/devel/dotfiles/references/gitconfigs/gpg-keys

[includeIf "gitdir:~/devel/close/"]
    path = ~/devel/dotfiles/references/gitconfigs/close
