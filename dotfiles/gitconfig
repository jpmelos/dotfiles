[user]
    name = Jo√£o Sampaio
    email = jpmelos@gmail.com

[core]
    editor = vim
    pager = less -q
    excludesFile = ~/.gitignore

[status]
    showUntrackedFiles = all

[merge]
    conflictStyle = diff3

[push]
    default = simple

[alias]
    bl = blame --show-stats
    br = branch
    ci = commit -v
    cle = clean -dfx
    co = checkout
    dcst = diff --cached --stat
    del = branch -D
    di = diff
    dic = diff --cached
    dst = diff --stat
    fe = fetch --all --prune
    gr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)
    ls = ls-files
    mg = merge
    pa = add --patch
    pu = pull --rebase
    puf = push --force-with-lease
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    sa = stash save --include-untracked
    sh = show
    shf = diff-tree --no-commit-id --name-only -r HEAD
    st = status -u

    diff-commits = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[color]
    ui = always
    interactive = false

[color "branch"]
    current = green dim bold
    remote = red dim

[color "status"]
    added = green dim
    changed = blue dim
    untracked = red dim

[color "diff"]
    meta = black bold
    frag = black
    new = green dim bold
    old = red dim bold
    whitespace = black red dim bold

[includeIf "gitdir:~/devel/close/"]
	path = ~/devel/dotfiles/dotfiles/gitconfigs/close
