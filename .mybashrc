PS1='\[\e[1;32m\][\u@\h \W]\$\[\e[0m\] '
EDITOR=/usr/bin/vim

alias ls='ls -F --color=always'
alias list='ls -FhAls --color=always | less -r'
alias cp='cp -i'
alias mv='mv -i'
alias cal='cal -3'
alias grep='grep --color=always --binary-files=without-match -n'

umask 077

function setperm
{
    find . -type d -exec chmod 700 {} \;
    find . -type f -exec chmod 600 {} \;
}
